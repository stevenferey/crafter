{
  "name": "crafter-backend",
  "version": "1.0.0",
  "description": "Backend API for Crafter CRA application",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --exec tsx src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:migrate": "psql -h localhost -U cra_user -d cra_db -f migrations/init.sql",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": ["cra", "backend", "api", "postgresql"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.21.2",
    "pg": "^8.13.1",
    "dotenv": "^16.4.7",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.5",
    "@types/pg": "^8.11.10",
    "typescript": "^5.7.3",
    "tsx": "^4.19.2",
    "nodemon": "^3.1.9",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2"
  }
}
